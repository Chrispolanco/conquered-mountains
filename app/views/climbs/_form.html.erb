<%= form_for @climb do |f| %> 
    <% if @climb.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@climb.errors.count, "error") %>
                Prohibited this Climber from being saved into the database:
            </h2>

            <h2> There were some errors: </h2> 
            <ul>
                <% @climb.errors.full_messages.each do |message| %>
                    <li> <%= message %> 
                <% end %> 
            </ul> 
        </div> 
    <% end %> 

    <div class="field">
        <%= f.label 'Name' %><br>
        <%= f.datetime_select :name %><br> 
    </div> 

    <div class="field">
        <%= f.label 'Date & Time Started' %><br>
        <%= f.datetime_select :date_time_started %><br> 
    </div> 

    <div class="field">
        <%= f.label 'Date & Time Finished' %><br>
        <%= f.datetime_select :date_time_completed %><br> 
    </div> 

    <div class="actions">
        <%= f.submit "Submit Climb" %>
    </div> 

<% end %> 


