<%= form_for @mountain do |f| %> 
    <% if @mountain.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@mountain.errors.count, "error") %>
                Prohibited this Climber from being saved into the database:
            </h2>

            <h2> There were some errors: </h2> 
            <ul>
                <% @mountain.errors.full_messages.each do |message| %>
                    <li> <%= message %> </li>
                <% end %> 
            </ul> 
        </div> 
    <% end %> 
    
    <div class="field">
        <%= f.label 'Name' %><br>
        <%= f.text_field :name %><br> 
    </div> 

    <div class="field">
        <%= f.label 'Route' %><br>
        <%= f.text_field :route %><br> 
    </div> 

    <div class="field">
        <%= f.label 'Difficulty Score' %><br>
        <%= f.text_field :difficulty_rating %><br> 
    </div> 

    <div class="actions">
        <%= f.submit "Submit Mountain" %>
    </div> 

<% end %> 
