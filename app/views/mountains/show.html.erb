<h2> <%= @mountain.name %> </h2> 
<h3> <%= @mountain.route %> </h3> 
<h4> <%= @mountain.difficulty_rating %> </h4> 

<%= link_to 'Edit', edit_mountain_path(@mountain) %>

<h3> <%= pluralize(@mountain.climbs.climbers.count, "Climbers" %> have climbed the Mountain" </h3> 

<h3> Climbers to Climb Mountain </h3> 
    <% mountain.climb.climbers each do |climber| %> 
        <div> <%= link_to climber.name, climber_path(climber)%> 
        </div> 
    <% end %> 
