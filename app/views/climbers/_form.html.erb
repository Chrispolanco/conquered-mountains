<%= form_for @climber do |f| %> 

<%= render partial: 'layouts/errors', locals: {object: @climber}%>


    <div class="field">
        <%= f.label 'Name' %><br>
        <%= f.text_field :name %><br> 
    </div>
        
    <div class="field">
        <%= f.label 'Age' %><br>
        <%= f.text_field :age %><br> 
    </div>

    <div class="field">
        <%= f.label 'Years of Experience' %><br>
        <%= f.text_field :experience %><br> 
    </div>

    <p> Completed Mountains </p> 
    <div class="field">
        <%= f.collection_check_boxes :mountain_ids, Mountain.all, :id, :name %>
        <br>
        <p> Manually Enter Mountain </p> 
        <%= f.fields_for :mountains, climber.mountains.build do |mountains_fields| %>
            <%= mountains_fields.text_field :name %>
        <% end %>
    </div> 

    <p> Most Recent Completed Climb </p> 
    <div class="field"> 
        <%= f.fields_for :climbs do |climb| %>
                <%= climb.label :name %>
                <%= climb.text_field :name %><br>

                <%= climb.label :duration %>
                <%= climb.text_field :duration %><br>

                <%= climb.label :date_started %>
                <%= climb.text_field :date_started %><br>

                <%= climb.label :date_completed %>
                <%= climb.text_field :date_completed %><br>
        <% end %>
    </div> 


    <div class="actions">
        <%= f.submit "Submit Climber" %>
    </div> 

<% end %>



