<%= form_for @climber do |f| %> 
    <% if @climber.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@climber.errors.count, "error") %>
                Prohibited this Climber from being saved into the database:
            </h2>

            <h2> There were some errors: </h2> 
            <ul>
                <% @climber.errors.full_messages.each do |message| %>
                    <li> <%= message %> 
                <% end %> 
            </ul> 
        </div> 
    <% end %> 

    <div class="field">
        <%= f.label 'Name' %><br>
        <%= f.text_field :name %><br> 
    </div>
        
    <div class="field">
        <%= f.label 'Age' %><br>
        <%= f.text_field :age %><br> 
    </div>

    <div class="field">
        <%= f.label 'Years of Experience' %><br>
        <%= f.text_field :experience %><br> 
    </div>

    <div class="field"> 
        <%= f.text_field :mountain_name, list: "mountains_autocomplete" %>
        <datalist id="mountains_autocomplete">
            <% Mountain.all.each do |mountain| %>
                <option value="<%= mountain.name %>">
            <% end %> 
        </datalist> 
        <textarea name="climber[mountain_name]"></textarea>
    </div> 

    <div class="field"> 
        <%= f.collection_select :climber_id, Climber.all, :id, :name %> 
        <input name="climber[climber_members][]" id="climber_member_1">
        <input name="climber[climber_members][]" id="climber_member_2">
        <input name="climber[climber_members][]" id="climber_member_3">
        <input name="climber[climber_members][]" id="climber_member_4">
        <input name="climber[climber_members][]" id="climber_member_5">
        <input name="climber[climber_members][]" id="climber_member_6">
    </div> 

    <div class="actions">
        <%= f.submit "Submit Climber" %>
    </div> 

<% end %>

